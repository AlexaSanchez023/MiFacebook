<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="@color/gris"
        android:layout_marginBottom="10dp"
        android:text="Facebook" />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Numero de celular o correo electronico" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f8fa"
        android:ems="10"
        android:textSize="25sp"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Contraseña" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f8fa"
        android:ems="10"
        android:textSize="25sp"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5693fe"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:text="Iniciar Sesión" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        android:text="¿olvidaste tu contraseña?" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#30a24b"
        android:gravity="center"
        android:text="crear cuenta nueva"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:text="Español" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        android:text="English (US)" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:layout_marginLeft="8dp"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:text="français (France)" />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        android:text="português (Brasil)" />
    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        android:text="中国人 (中国)" />
    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        android:text="Italiano" />
    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:text="Más idiomas" />


</LinearLayout>